# postgREST url within docker network
POSTGREST_URL=http://backend:3500
# postgREST url from outside (frontend)
NEXT_PUBLIC_POSTGREST_URL=http://localhost:3500

# required for next-auth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# SURFCONEXT
AUTH_SURFCONEXT_CLIENT_ID=
AUTH_SURFCONEXT_CLIENT_SECRET=
AUTH_SURFCONEXT_WELL_KNOWN_URL=https://connect.test.surfconext.nl/.well-known/openid-configuration
AUTH_SURFCONEXT_REDIRECT_URL=http://localhost:3000/api/auth/callback/surfconext

# signing key for our own generated JWT's, needs to be at least 32 characters long as per https://postgrest.org/en/v9.0/tutorials/tut1.html#step-2-make-a-secret
PGRST_JWT_SECRET=reallyreallyreallyreallyverysafe
